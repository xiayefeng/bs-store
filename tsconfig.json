{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es5",
      "esnext"
    ],
    "noResolve": true,
    "traceResolution": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "target": "es5"
    
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}